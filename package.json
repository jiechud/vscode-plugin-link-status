{
	"name": "vscode-plugin-link-list",
	"displayName": "Npm & Yarn Link List",
	"description": "",
	"version": "0.0.5",
	"publisher": "qiaojienode",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:sidebar_test_id1"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "nodeDependencies.unlinkAllEntry",
				"title": "All Unlink",
				"icon": "resource/unlink.svg"
			},
			{
				"command": "nodeDependencies.refreshEntry",
				"title": "Refresh",
				"icon": "resource/refresh.svg"
			},
			{
				"command": "nodeDependencies.unlinkEntry",
				"title": "Unlink",
				"icon": "resource/unlink.svg"
			},
			{
				"command": "nodeDependencies.linkEntry",
				"title": "Link",
				"icon": "resource/link1.svg"
			},
			{
				"command": "nodeDependencies.unlinkSingleEntry",
				"title": "UnLink",
				"icon": "resource/unlink.svg"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "sidebar_test",
					"title": "Link List",
					"icon": "resource/link.svg"
				}
			]
		},
		"views": {
			"sidebar_test": [
				{
					"id": "sidebar_test_id1",
					"name": "Link 列表"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "nodeDependencies.refreshEntry",
					"when": "view == sidebar_test_id1",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.unlinkAllEntry",
					"when": "view == sidebar_test_id1",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "nodeDependencies.unlinkEntry",
					"when": "viewItem == folder",
					"group": "inline"
				},
				{
					"command": "nodeDependencies.linkEntry",
					"when": "viewItem == link",
					"group": "inline"
				},
				{
					"command": "nodeDependencies.unlinkSingleEntry",
					"when": "viewItem == link",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"pb": " vsce publish"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}